<Window x:Class="SmallAdoProject.Manager.ManagerLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmallAdoProject.Manager"
        mc:Ignorable="d"
        Title="ManagerLoginWindow" Height="250" Width="400" Loaded="Window_Loaded">
    <Grid Background="AliceBlue">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Login: "  Width="250"></Label>
            <TextBox x:Name="login_input" Width="250" Height="30" FontSize="15" ></TextBox>
            <Label Content="Password: "  Width="250"></Label>
            <PasswordBox x:Name="password_input" Width="250" Height="30" FontSize="15"></PasswordBox>
            <Button x:Name="Login" Content="LOGIN" Width="70" Margin="0,10,0,0" Click="Login_Click" ></Button>
        </StackPanel>
    </Grid>
</Window>
